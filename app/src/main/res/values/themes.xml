<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- MikuBox Light Theme -->
    <style name="Theme.MikuBox.Light" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/miku_teal</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorPrimaryContainer">@color/miku_teal_light</item>
        <item name="colorOnPrimaryContainer">#00201E</item>
        
        <item name="colorSecondary">@color/miku_pink</item>
        <item name="colorOnSecondary">@color/onPrimary</item>
        <item name="colorSecondaryContainer">@color/miku_pink_light</item>
        <item name="colorOnSecondaryContainer">#3E0021</item>
        
        <item name="colorSurface">@color/miku_surface_light</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="android:colorBackground">@color/miku_background_light</item>
        <item name="colorOnBackground">@color/onBackground</item>
        
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <item name="android:navigationBarColor">@color/miku_surface_light</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <item name="materialCardViewStyle">@style/Widget.MikuBox.CardView</item>
        <item name="bottomNavigationStyle">@style/Widget.MikuBox.BottomNavigationView</item>
        
        <!-- Standard M3 styles -->
        <item name="navigationRailStyle">@style/Widget.Material3.NavigationRailView</item>
        <item name="tabStyle">@style/Widget.Material3.TabLayout</item>
        <item name="toolbarStyle">@style/Widget.Material3.Toolbar</item>
    </style>
    
    <!-- MikuBox Dark Theme -->
    <style name="Theme.MikuBox.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/miku_teal_light</item>
        <item name="colorOnPrimary">#003734</item>
        <item name="colorPrimaryContainer">#00504B</item>
        <item name="colorOnPrimaryContainer">#9BFBF3</item>
        
        <item name="colorSecondary">@color/miku_pink_light</item>
        <item name="colorOnSecondary">#5E0036</item>
        <item name="colorSecondaryContainer">#83004C</item>
        <item name="colorOnSecondaryContainer">#FFD8EC</item>
        
        <item name="colorSurface">@color/miku_surface_dark</item>
        <item name="colorOnSurface">@color/darkThemeOnSurface</item>
        <item name="android:colorBackground">@color/miku_background_dark</item>
        <item name="colorOnBackground">@color/darkThemeOnBackground</item>
        
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <item name="android:navigationBarColor">@color/miku_surface_dark</item>
        <item name="android:windowLightNavigationBar">false</item>

        <item name="materialCardViewStyle">@style/Widget.MikuBox.CardView</item>
        <item name="bottomNavigationStyle">@style/Widget.MikuBox.BottomNavigationView</item>
    </style>
    
    <!-- MikuBox AMOLED Theme -->
    <style name="Theme.MikuBox.Amoled" parent="Theme.MikuBox.Dark">
        <item name="colorSurface">#000000</item>
        <item name="android:colorBackground">#000000</item>
        <item name="android:navigationBarColor">#000000</item>
    </style>
    
    <!-- Widget Styles -->
    <style name="Widget.MikuBox.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    
    <style name="Widget.MikuBox.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconSize">24dp</item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="elevation">0dp</item>
        <item name="itemTextColor">@color/bottom_nav_color_selector</item>
        <item name="itemIconTint">@color/bottom_nav_color_selector</item>
    </style>

</resources>
