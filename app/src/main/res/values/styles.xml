<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        Learn how to setup this file at:
        [Custom Styles Documentation]
    -->
    <style name="MyApp" />

    <!--
        Splash screen theme follow device's theme
        You can change the parent to any of these:
        - Frames.SplashScreen
        - Frames.SplashScreen.Amoled
        - Frames.SplashScreen.MaterialYou
        - Frames.SplashScreen.Amoled.MaterialYou
    -->
    <style name="MyApp.SplashScreen" parent="Frames.SplashScreen">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Light Theme - Modern & Clean -->
    <style name="MyApp.Default" parent="Theme.MikuBox.Light">
        <item name="bottomNavigationStyle">@style/Widget.MikuBox.BottomNavigationView</item>
        <!-- Card styling -->
        <item name="materialCardViewStyle">@style/Widget.MikuBox.CardView</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
    </style>

    <!-- Dark Theme - Elegant & Premium -->
    <style name="MyApp.Default.Amoled" parent="Theme.MikuBox.Amoled">
        <item name="bottomNavigationStyle">@style/Widget.MikuBox.BottomNavigationView</item>
        <!-- Card styling -->
        <item name="materialCardViewStyle">@style/Widget.MikuBox.CardView</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="MyApp.BottomNavigationView" parent="Widget.Frames.BottomNavigationView">
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconSize">24dp</item>
    </style>

    <!-- Card View Style - Light Theme -->
    <style name="MyApp.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/cards_corner_size</item>
        <item name="cardElevation">@dimen/cards_elevation</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@color/accent</item>
    </style>

    <!-- Card View Style - Dark Theme -->
    <style name="MyApp.CardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/cards_corner_size</item>
        <item name="cardElevation">@dimen/cards_elevation</item>
        <item name="cardBackgroundColor">@color/darkThemeSurface</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@color/darkThemeAccent</item>
    </style>

    <!-- Button Style -->
    <style name="MyApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/medium_components_corner_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Text Button Style -->
    <style name="MyApp.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">@dimen/small_components_corner_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
