<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Material You Light Theme -->
    <style name="MyApp.Default.MaterialYou" parent="Frames.Default.MaterialYou">
        <item name="bottomNavigationStyle">@style/MyApp.BottomNavigationView.MaterialYou</item>

        <!-- Card styling -->
        <item name="materialCardViewStyle">@style/MyApp.CardView.MaterialYou</item>
    </style>

    <!-- Material You AMOLED Theme -->
    <style name="MyApp.Default.Amoled.MaterialYou" parent="Frames.Default.Amoled.MaterialYou">
        <item name="bottomNavigationStyle">@style/MyApp.BottomNavigationView.MaterialYou</item>

        <!-- Card styling -->
        <item name="materialCardViewStyle">@style/MyApp.CardView.MaterialYou</item>
    </style>

    <!-- Material You Bottom Navigation -->
    <style name="MyApp.BottomNavigationView.MaterialYou" parent="Widget.Frames.BottomNavigationView.MaterialYou">
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconSize">24dp</item>
    </style>

    <!-- Material You Card View -->
    <style name="MyApp.CardView.MaterialYou" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">@dimen/cards_corner_size</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>
