<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Monet Emphasis (Default Dynamic) -->
    <style name="Theme.Monet.Emphasis.Light" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Use standard MD3 styles to leverage dynamic colors -->
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Elevated</item>
        <item name="bottomNavigationStyle">@style/Widget.Material3.BottomNavigationView</item>
    </style>

    <style name="Theme.Monet.Emphasis.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Elevated</item>
        <item name="bottomNavigationStyle">@style/Widget.Material3.BottomNavigationView</item>
    </style>

    <style name="Theme.Monet.Emphasis.Amoled" parent="Theme.Monet.Emphasis.Dark">
        <item name="colorSurface">#000000</item>
        <item name="android:colorBackground">#000000</item>
        <item name="android:navigationBarColor">#000000</item>
    </style>

    <!-- Monet Pastel (Soft) -->
    <style name="Theme.Monet.Pastel.Light" parent="Theme.Monet.Emphasis.Light">
        <!-- Override Primary to be softer (System Accent 1 mapping) -->
        <!-- Standard Light Primary is usually 600 (Tone 40) -->
        <!-- Pastel: Use 200 (Tone 80) for main color -->
        <item name="colorPrimary">@android:color/system_accent1_200</item>
        <item name="colorOnPrimary">@android:color/system_accent1_900</item>
        <item name="colorPrimaryContainer">@android:color/system_accent1_100</item>
        <item name="colorOnPrimaryContainer">@android:color/system_accent1_900</item>
    </style>

    <style name="Theme.Monet.Pastel.Dark" parent="Theme.Monet.Emphasis.Dark">
         <item name="colorPrimary">@android:color/system_accent1_200</item>
         <item name="colorOnPrimary">@android:color/system_accent1_800</item>
         <item name="colorPrimaryContainer">@android:color/system_accent1_700</item>
         <item name="colorOnPrimaryContainer">@android:color/system_accent1_100</item>
    </style>
    
    <style name="Theme.Monet.Pastel.Amoled" parent="Theme.Monet.Pastel.Dark">
        <item name="colorSurface">#000000</item>
        <item name="android:colorBackground">#000000</item>
        <item name="android:navigationBarColor">#000000</item>
    </style>
</resources>
