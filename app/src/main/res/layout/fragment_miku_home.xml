<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/html_base"
    android:clipToPadding="false"
    android:paddingBottom="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Hero Header -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHero"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="32dp"
            app:cardBackgroundColor="@color/html_surface2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="24dp">

                <!-- Decorative Blur Circle -->
                <View
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:background="@drawable/bg_hero_blur_blob"
                    android:alpha="0.2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="-40dp"
                    android:layout_marginEnd="-40dp" />

                <!-- Version Badge -->
                <FrameLayout
                    android:id="@+id/versionChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bottom_nav_blur"
                    android:backgroundTint="#30000000"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="v2.4.0"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#CCFFFFFF" />
                </FrameLayout>

                <!-- Icon Hexagon Placeholder -->
                <View
                    android:id="@+id/iconContainer"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_hero_gradient_box"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_hexagon" 
                    app:tint="@color/html_onPrimary"
                    app:layout_constraintStart_toStartOf="@id/iconContainer"
                    app:layout_constraintEnd_toEndOf="@id/iconContainer"
                    app:layout_constraintTop_toTopOf="@id/iconContainer"
                    app:layout_constraintBottom_toBottomOf="@id/iconContainer"/>

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif-medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/subtitleText"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/subtitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Material Design Icon Pack"
                    android:textSize="14sp"
                    android:textColor="@color/html_text_secondary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Actions Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="12dp">

            <!-- Apply Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardApply"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="@color/html_primary"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apply"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/html_onPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right"
                        android:rotation="-45"
                        app:tint="@color/html_onPrimary"
                        android:alpha="0.7"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_brush"
                        app:tint="@color/html_onPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/applySubtitle"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/applySubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24 Launchers\nSupported"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/html_onPrimary"
                        android:alpha="0.8"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Icons Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardIcons"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="@color/html_surface"
                app:strokeColor="#4D444746"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Icons"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEW"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:background="@drawable/bg_chip_new"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/iconsSubtitle"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/placeholder_circle"
                            android:backgroundTint="@color/html_icon_blue" />
                         <View
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="-8dp"
                            android:background="@drawable/placeholder_circle"
                            android:backgroundTint="@color/html_icon_purple" />
                         <FrameLayout
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="-8dp"
                            android:background="@drawable/placeholder_circle"
                            android:backgroundTint="@color/html_icon_green">
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="+5k"
                                 android:textSize="8sp"
                                 android:textStyle="bold"
                                 android:textColor="#000000"
                                 android:layout_gravity="center"/>
                         </FrameLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/iconsSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Icons"
                        android:textSize="12sp"
                        android:textColor="@color/html_text_secondary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Wallpapers Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWallpapers"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@color/html_surface"
            app:strokeColor="#4D444746"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Placeholder Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background"
                    android:alpha="0.6" />
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_overlay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wallpapers"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/wallSubtitle" />
                
                 <TextView
                    android:id="@+id/wallSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="240+ Cloud based walls"
                    android:textSize="12sp"
                    android:textColor="#CCFFFFFF"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/placeholder_circle"
                    android:backgroundTint="#30FFFFFF"
                    android:layout_margin="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_image"
                        app:tint="@android:color/white"
                        android:layout_gravity="center" />
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Secondary Actions Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFaqs"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:layout_constraintDimensionRatio="1:1"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@color/html_surface2"
                app:strokeWidth="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_question"
                        app:tint="@color/html_tertiary" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FAQs"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/html_text_secondary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRequest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginHorizontal="6dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@color/html_surface2"
                app:strokeWidth="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_send"
                        app:tint="@color/html_secondary" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Request"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/html_text_secondary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSettings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@color/html_surface2"
                app:strokeWidth="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_settings"
                        app:tint="@color/html_text_secondary" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/html_text_secondary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
