<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/html_base">

    <!-- Content Container -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Navigation (Custom Implementation) -->
    <LinearLayout
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_nav_blur"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="20dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Home Item -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout
                android:id="@+id/pill_home"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_nav_pill_active">
                <ImageView
                    android:id="@+id/icon_home"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_home_filled"
                    app:tint="@color/html_onPrimary" />
            </FrameLayout>
            
            <TextView
                android:id="@+id/text_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Icons Item -->
        <LinearLayout
            android:id="@+id/nav_icons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout
                android:id="@+id/pill_icons"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_nav_pill_inactive">
                <ImageView
                    android:id="@+id/icon_icons"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_shapes"
                    app:tint="@color/html_text_secondary" />
            </FrameLayout>

            <TextView
                android:id="@+id/text_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Icons"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/html_text_secondary"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Walls Item -->
        <LinearLayout
            android:id="@+id/nav_walls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout
                android:id="@+id/pill_walls"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_nav_pill_inactive">
                <ImageView
                    android:id="@+id/icon_walls"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_image"
                    app:tint="@color/html_text_secondary" />
            </FrameLayout>

            <TextView
                android:id="@+id/text_walls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Walls"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/html_text_secondary"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
